@model Podcaster.ViewModels.PodcastCreateViewModel

@{
    ViewData["Title"] = "Add a new Podcast";
}

<div class="row">
    <div class="col-xs-12 text-center">
        <h2 class="top-buffer">@ViewData["Title"]</h2>    
    </div>
</div>


<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(model => model.PodcastEpisode.EpisodeName)
                <input asp-for="@Model.PodcastEpisode.EpisodeName" class="form-control" />
                <span asp-validation-for="@Model.PodcastEpisode.EpisodeName" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="PodcastEpisode.PodcastChannelId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DropDownList("PodcastEpisode.PodcastChannelId", @Model.PodcastChannelId)
                <span asp-validation-for="PodcastEpisode.PodcastChannelId" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>