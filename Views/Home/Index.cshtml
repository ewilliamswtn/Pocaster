@model Podcaster.ViewModels.EpisodeListAllViewModel

@{
    ViewData["Title"] = "Podcast Episodes";
}

<div class="row">
    <div class="col-xs-12 text-center">
        <h2 class="top-buffer">@ViewData["Title"]</h2>    
    </div>
</div>

<input id="search" type="text" name="search" placeholder="Search..">

@foreach (var episode in Model.Episodes)
{
    var id = episode.PodcastEpisodeId;

    <div class="row podcastWrapper">
        <div class="col-xs-12 podcast">                
                <span class="podcastName"><strong>@Html.DisplayFor(modelItem => episode.PodcastChannel.ChannelName):&nbsp;</strong>
                @Html.DisplayFor(modelItem => episode.EpisodeName)</span>
        </div>

        <div class="col-xs-1 spacer"></div>

        <span class="ratingWrapperWraper">
            <span class="ratingWrapper">
                <a asp-controller="Home" asp-action="Review" asp-route-id="@episode.PodcastEpisodeId">
                    <i class="fa fa-star-o" aria-hidden="true"></i>
                    <i class="fa fa-star-o" aria-hidden="true"></i>
                    <i class="fa fa-star-o" aria-hidden="true"></i>
                    <i class="fa fa-star-o" aria-hidden="true"></i>
                    <i class="fa fa-star-o" aria-hidden="true"></i>                    
                </a>
            </span>
        </span> <br>

        <div class="col-xs-1 spacer"></div>
        <div class="tagWrapper">
            <a asp-controller="Home" asp-action="TagCreate" asp-route-id="@episode.PodcastEpisodeId"><i class="fa fa-tags" aria-hidden="true"></i></a>
            @foreach (var tag in Model.TagsList)
                {
                    @if (id == tag.PodcastEpisodeId && tag.Tag != null)
                    {
                        <text>
                            <span class="tagSpan">@Html.DisplayFor(modelItem => tag.Tag)</span>
                        </text>
                    }
                    
                }
        </div>
    </div>
}
